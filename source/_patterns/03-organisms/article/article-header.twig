<header class="c-article__header u-spacing--and-half l-container">

  <div class="l-container l-container--12col u-spacing--and-half">

    {% if breadcrumbs %}
      {% include 'molecules-breadcrumb' %}
    {% endif %}

    {%
      include 'atoms-headline'
      with {
        "headline_classes": "c-article__headline"
      }
    %}
  </div>

  <div class="l-container l-container--10col">

    {% if is_sponsored %}
      <div class="o-ad--sponsored">
        <span class="o-ad__label u-font--secondary-style u-font--xxs">Sponsored by BMW</span>
        <a href=""><img src="https://d.pr/i/r7sxVq+" alt=""></a>
      </div>
    {% endif %}

    {% include 'molecules-article-meta' %}

  </div>

  <div class="c-article__lead">

    <div class="l-container l-container--10col">

      <div class="c-article__share u-border-accent u-border-accent--right">
        {% include 'molecules-share-tools' %}
      </div>

      {% if img %}
        {% if is_gallery %}
          {% include 'molecules-lead-gallery' %}
        {% else %}
          {% include 'molecules-lead' %}
        {% endif %}
      {% endif %}
    </div>

    <div class="c-article__related c-article__related--wide-screens">
      {%
        include 'organisms-related-content'
        with {
          "related_classes": "u-border-accent u-border-accent--left"
        }
      %}
    </div>

  </div>

</header>
