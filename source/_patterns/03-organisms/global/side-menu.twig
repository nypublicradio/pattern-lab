<div class="c-side-menu">

  <div class="c-menu-toggle">
    {% include '@atoms/buttons/menu-button.twig' %}
  </div>

  <div class="c-side-menu__group">

    <div class="c-side-menu__branding">
      <a href="/">{% include '@atoms/images/gothamist-logo.twig' %}</a>
    </div>

    {%
      include '@atoms/buttons/button.twig'
      with {
        "button_text": "Donate",
        "button_classes": "c-side-menu__donate"
      }
    %}
    {%
      include '@molecules/navigation/primary.twig'
      with {
        "primary_nav_classes": "c-primary-nav--side",
        "primary_nav_link_classes": "u-has-accent u-has-accent--quaternary"
      }
    %}

    <div class="c-side-menu__social">
      {%
        include '@molecules/social/share-tools.twig'
        with { label: 'Follow Us' }
      %}
    </div>

  </div>

  <div class="c-side-menu__group">

    <div class="c-side-menu__secondary-nav">
      {% include '@molecules/navigation/secondary.twig' %}
    </div>

    <div class="u-spacing">
      {%
        include '@molecules/forms/search-entry.twig'
        with {
          "search_classes": "c-search--side"
        }
      %}
      {%
        include '@atoms/buttons/button.twig'
        with {
          "button_text": "Send a Story Idea",
          "button_classes": "c-side-menu__send-story o-button--c-quaternary u-full-width"
        }
      %}
    </div>

    <div class="c-side-menu__nypr-logo">
      {% include '@atoms/images/nypr-logo.twig' %}
    </div>

    <div class="c-side-menu__nypr-linkroll">
      {% include '@molecules/navigation/nypr-brands-linkroll.twig' %}
    </div>

  </div>

  <div class="c-side-menu__group u-spacing--double">

    <div class="c-side-menu__copyright">
      <p class="u-font--secondary-style u-font--xs u-color--white">&copy; 2019 New York Public Radio. All rights reserved.</p>
    </div>

    <div class="c-side-menu__terms-links">
      <a href="" class="u-font--secondary-style u-font--xs"><strong>Terms of Use</strong></a>
      <a href="" class="u-font--secondary-style u-font--xs"><strong>Privacy Policy</strong></a>
    </div>

  </div>

</div>
