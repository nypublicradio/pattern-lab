<div class="c-block-meta u-color--meta">
  {% if author %}
    <span class="c-block-meta__author u-font--secondary-style">{{ author }}</span>
  {% endif %}
  {% if timestamp %}
    <span class="c-block-meta__timestamp u-font--secondary-style">{{ timestamp }}</span>
  {% endif %}
  {% if comment_count %}
    <a href="" class="c-block-meta__comments u-font--secondary-style u-font--xs"><span class="o-icon o-icon--comment u-icon--xs">{% include '@atoms/icons/icon-comment.twig' %}</span> {{ comment_count }}</a>
  {% endif %}
</div>
